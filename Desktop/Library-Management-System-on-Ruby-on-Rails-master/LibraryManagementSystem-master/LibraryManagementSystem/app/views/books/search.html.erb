<p id="notice"><%= notice %></p>


<p>
 <table>
  <thead>
    <tr>
      <th>Isbn</th>
      <th>Title</th>
      <th>Authors</th>
      <th>Language</th>
      <th>Published</th>
      <th>Edition</th>
      <th>Subject</th>
      <th>Summary</th>
      <th>Category</th>
      <th>Special Collection</th>
      <th>Library</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
  <% if !@results.nil? then @results.each do |result| %>
      <tr>
        <td><%= result.isbn %></td>
        <td><%= result.title %></td>
        <td><%= result.authors %></td>
        <td><%= result.language %></td>
        <td><%= result.published %></td>
        <td><%= result.edition %></td>
        <td><%= result.subject %></td>
        <td><%= result.summary %></td>
        <td><%= result.category %></td>
        <td><%= if result.special_collection == true
			'Yes'
			else
			  'No'
			end
			 %></td>
        <td><%=  Library.find(result.library_id).name %></td>
		<% if current_student.nil? %>
		<td><%= link_to 'Show', controller: "books", action: "show", id: result%></td>
        <td><%= link_to 'Checkout', controller: "books", action: "checkout", id: result %></td>
        <td><%= link_to 'Bookmark', controller: "books", action: "bookmark", id: result %></td>
        <td><%= link_to 'Request Book', controller: "books", action: "requestBook", id: result %></td>
		<% end %>
      </tr>
	  <% end %>
  </tbody>
</table>

<% end %>

<% if !current_student.nil? %>
	<%= link_to 'Back', books_students_path %>
<% else %>
	<%= link_to 'Back', books_path %>
<% end %>
