<%= form_with(model: book, local: true, :html => {multipart: true}) do |form| %>
	 <div class="field">
	    <%= form.label :title %>
	    <%= form.text_field :title %>
	  </div>

	  <div class="field">
	    <%= form.label :author %>
	    <%= form.text_field :author %>
	  </div>

	  <div class="field">
	    <%= form.label :description %>
	    <%= form.text_field :description %>
	  </div>

	  <div class="field">
	    <%= form.label :price %>
	    <%= form.text_field :price %>
	  </div>

		<div class="actions">
		  <%= form.submit %>
		</div>
<% end %>