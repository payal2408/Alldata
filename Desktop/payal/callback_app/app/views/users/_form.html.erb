<%= form_with(model: user) do |f| %>
	<div class="form-field">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>	
	
	<div class="form-field">
		<%= f.label :login %>
		<%= f.text_field :login %>
	</div>	

	<div class="form-field">
		<%= f.label :email %>
		<%= f.text_field :email %>
	</div>	

	<div class="form-field">
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>	

	<div class="action">
		<%= f.submit %>
	</div>
<% end %>
