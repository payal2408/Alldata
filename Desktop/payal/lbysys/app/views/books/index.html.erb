<p id="notice"><%= notice %></p>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Authors</th>
      <th>Description</th>
      <th>Image</th>
      <th>Price</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
        <td> <image src= "<%=(url_for(book.image))%>"> </td>
		    <td><%= book.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if student_signed_in? %>
  <%= link_to 'Back', students_path %>
<% else %>
  <%= link_to 'Back', admins_path %>
<% end %>

